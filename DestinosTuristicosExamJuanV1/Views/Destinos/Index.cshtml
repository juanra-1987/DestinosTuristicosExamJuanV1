@model List<DestinosTuristicosExamJuanV1.Models.Destinos>

@{
    ViewData["Title"] = "Index";

}

<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet"
      id="theme_link"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.1.2/lux/bootstrap.min.css" />

<h1>Index</h1>

<div class="container">
    <div class="row">

@foreach (var destinos in Model)
{
    
            <div class="card m-2" style="width: 18rem">
                <h5 class="card-title">@destinos.Id @destinos.Nombre</h5>
                <img src="@destinos.Foto" class="card-img-top" alt="...">
                <div class="card-body">
                    <section class="card-text">@destinos.Descripcion</section>
                    
                </div>
                <a href="" class="btn btn-primary">Precio desde $ @destinos.Precio  por día!</a>
            </div>
        

}
    </div>
</div>






